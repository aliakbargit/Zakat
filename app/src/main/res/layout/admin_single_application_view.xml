<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/single_admin_application_relative"
    >
    <RelativeLayout
        android:id="@+id/single_admin_user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_baseline_account_circle_24"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/single_admin_user_image"
        >

        <TextView
            android:id="@+id/single_admin_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ali Akbor"
            android:padding="5dp"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/single_admin_user_zakatType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zakat Type"
            android:padding="5dp"
            android:textSize="18sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/single_admin_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_cancel_black_24dp"
                />
            <TextView
                android:id="@+id/single_admin_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_check_circle_black_24dp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</layout>