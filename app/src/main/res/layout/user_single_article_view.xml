<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="article"
            type="com.example.zakat.models.core.ZakatArticle" />
    </data>
<androidx.cardview.widget.CardView
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cardView_RelatedArticle"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hint"
        android:padding="5dp"
        android:layout_margin="2dp"
        >
        <ImageView
            android:id="@+id/Related_article_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:id="@+id/relatedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{article.title}"
                />
            <TextView
                android:id="@+id/relatedAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relatedTitle"
                android:text="@{article.author}"
                />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>